
<% if(message != '') { %>
          <div class="alert alert-danger alert-dismissible fable show text-center alerta-error">
             <i class="fas fa-times-circle"></i> <%= message %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>        
          </div>
<% } %>


<% if(success != '') { %>
              <div class="alert alert-success alert-dismissible fable show text-center">
                  <%= success %>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>        
              </div>
    <% } %>